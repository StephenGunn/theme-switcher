{
  "name": "Nord",
  "description": "Arctic, north-bluish color palette",
  "apps": {
    "neovim": {
      "colorscheme": "nord",
      "background": "dark"
    },
    "lualine": {
      "theme": "nord"
    },
    "ghostty": {
      "theme": "Nord"
    },
    "hyprland": {
      "colors_file": "nord.conf"
    },
    "hyprpanel": {
      "theme_file": "hyprpanel.json"
    },
    "rofi": {
      "theme_file": "nord.rasi"
    },
    "gtk": {
      "theme_name": "Nordic",
      "icon_theme": "breeze-dark",
      "cursor_theme": "Bibata-Modern-Ice",
      "note": "Install: yay -S nordic-theme"
    },
    "kvantum": {
      "theme_name": "KvArcDark",
      "note": "Install: yay -S kvantum (Nord uses built-in dark theme)"
    },
    "yazi": {
      "flavor": "nord"
    },
    "tmux": {
      "colors": {
        "background_dark": "#2e3440",
        "foreground": "#d8dee9",
        "foreground_dim": "#88c0d0",
        "accent": "#ebcb8b",
        "separator": "#3b4252",
        "inactive_window": "#4c566a",
        "inactive_text": "#616e88",
        "active_window": "#81a1c1",
        "clock": "#88c0d0",
        "date": "#4c566a"
      }
    },
    "quickshell": {
      "font_family": "JetBrainsMono Nerd Font Mono",
      "colors": {
        "background": "#2e3440",
        "background_light": "#3b4252",
        "foreground": "#d8dee9",
        "foreground_dim": "#4c566a",
        "accent": "#ebcb8b",
        "accent_bright": "#ebcb8b",
        "red": "#bf616a",
        "green": "#a3be8c",
        "yellow": "#ebcb8b",
        "blue": "#81a1c1",
        "magenta": "#b48ead",
        "cyan": "#88c0d0",
        "red_bright": "#bf616a",
        "green_bright": "#a3be8c",
        "yellow_bright": "#ebcb8b",
        "blue_bright": "#81a1c1",
        "magenta_bright": "#b48ead",
        "cyan_bright": "#8fbcbb",
        "separator": "#3b4252",
        "workspace_active": "#81a1c1",
        "workspace_occupied": "#88c0d0",
        "workspace_empty": "#4c566a"
      }
    }
  },
  "pywal": {
    "colors_file": "colors.json",
    "apps": ["starship", "dunst"]
  }
}
